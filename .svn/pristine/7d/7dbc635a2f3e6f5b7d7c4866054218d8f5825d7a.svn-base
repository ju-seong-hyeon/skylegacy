<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.sky.user.dao.UserDao">

	<insert id="userCreateInsert" parameterType="kr.co.sky.user.vo.UserVo">
		INSERT INTO TB_USER_INFO (
			USER_ID
			, USER_NM
			, USER_PW
			, USER_EMAIL
			, USER_PHONE
			, USER_ADDR
		) VALUES (
			#{userId }
			, #{userNm }
			, #{userPw }
			, #{userEmail }
			, #{userPhone }
			, #{userFirstAddr }
		)
	</insert>

	<select id="selectUserDetail" parameterType="String" resultType="kr.co.sky.user.vo.UserVo">
		SELECT USER_ID
		, USER_NM
		, USER_EMAIL
		, USER_PHONE
		, USER_ADDR as userFirstAddr
		FROM TB_USER_INFO
		WHERE USER_ID = #{userId}
	</select>

	<select id="selectUserDetail2" parameterType="String" resultType="kr.co.sky.user.vo.UserVo">
		SELECT USER_ID
		, USER_NM
		, USER_EMAIL
		, USER_PHONE
		, USER_ADDR as userFirstAddr
		FROM TB_USER_INFO
		WHERE USER_ID = #{userId}
	</select>

	<select id="createIdCheck" parameterType="String" resultType="boolean">
		SELECT COUNT(*)
		FROM TB_USER_INFO
		WHERE USER_ID = #{userId }
	</select>

	<select id="createEmailCheck" parameterType="String" resultType="boolean">
		SELECT COUNT(*)
		FROM TB_USER_INFO
		WHERE USER_EMAIL = #{userEmail}
	</select>

	<update id="userUpdate" parameterType="kr.co.sky.user.vo.UserVo">
		UPDATE TB_USER_INFO SET
			USER_NM = #{userNm}
			, USER_PW = #{userPw}
			, USER_EMAIL = #{userEmail}
			, USER_PHONE = #{userPhone}
			, USER_ADDR = #{userFirstAddr}
		WHERE USER_ID = #{userId}
	</update>

	<select id="findAccount" parameterType="String" resultType="kr.co.sky.user.vo.UserVo">
		SELECT USER_ID FROM TB_USER_INFO WHERE USER_EMAIL = #{value }
	</select>

	<update id="userChangePwUpdate" parameterType="kr.co.sky.user.vo.UserVo">
		UPDATE TB_USER_INFO SET
			USER_PW = #{userPw}
		WHERE USER_ID = #{userId }
	</update>
</mapper>